<!DOCTYPE html>

<html>
<head>
  <meta name="viewport" content="width=device-width" />
  <title>@ViewBag.Title</title>
  @Styles.Render("~/Content/css")
  @Scripts.Render("~/bundles/modernizr")
  @Scripts.Render("~/bundles/jquery")
  @Scripts.Render("~/bundles/bootstrap")

  <style type="text/css">
    .club-nav {
      background-color: #2b3a35;
    }

    .navbar-collapse ul li a {
      color: cornsilk !important;
    }

    .club-home {
      color: cornsilk !important;
    }

    .clubHeader {
      padding-top: 10px;
      padding-bottom: 10px;
      background-color: #b7b7b7;
    }
  </style>
</head>
<body>
  <div class="navbar navbar-fixed-top navbar-default club-nav">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          
          @if (ViewBag.IsAdmin)
          {
          <span class="icon-bar"></span>
          }
        </button>
        @Html.ActionLink("Club Home", "Index", "Club", new { area = "" }, new { @class = "navbar-brand club-home" })
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li>@Html.ActionLink("Events", "Events", "Club", new { area = "" }, null)</li>
          <li>@Html.ActionLink("Join Us", "JoinUs", "Club", new { area = "" }, null)</li>
          @if (ViewBag.IsAdmin)
          {
          <li>@Html.ActionLink("New Announcement", "NewAnnouncement", "Club", new { area = "" }, null)</li>
          }
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a id="lnkAdmin" href="javascript:lnkAdminClick();">Admin</a></li>
        </ul>
      </div>
    </div>
  </div>

  <div class="modal" id="adminLoginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title" id="exampleModalLabel">Club Administrator Login</h3>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="~/Club/AdminLogin" method="POST">
          <div class="modal-body">
            <div class="form-group">
              <label for="inputEmail">Admin User ID</label>
              <input type="text" class="form-control" name="adminUserId" id="adminUserId" placeholder="adminUserId" required>
            </div>
            <div class="form-group">
              <label for="inputPassword">Password</label>
              <input type="password" class="form-control" name="adminPassword" id="adminPassword" placeholder="Password" required>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Login</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div>
    @RenderBody()
  </div>
  <hr />
  <footer style="text-align: center; color:dimgray">
    <p>&copy; @DateTime.Now.Year/@DateTime.Now.Month - CHS 3D Modeling/Printing</p>
  </footer>

  <script type="text/javascript">
    function lnkAdminClick() {
      $("#adminLoginModal").modal('show');
    }

  </script>
</body>
</html>
